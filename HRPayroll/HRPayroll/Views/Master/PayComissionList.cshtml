@model HRPayroll.Models.PayComission
@{
    ViewBag.Title = "PayComissionList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="page-wrapper">
        <div class="block-header py-2">
            <div class="row page-titles">
                <div class="col-md-6 align-self-center">
                    <h3 class="text-themecolor font-20 clearfix">Pay Commission List</h3>
                </div>

                <div class="col-md-6">
                    <div class="pbutton" style="text-align: right">
                        <div class="right text-right">
                            <a href="/Master/AddPayComission" id="btnAdd" class="btn btn-success btn-sm">
                                <i class="fa fa-plus" aria-hidden="true"></i> Add Pay Commission
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    @{
                        string Code = (string)TempData["code"];
                        string msg = (string)TempData["Msg"];
                        if (!string.IsNullOrEmpty(Code))
                        {
                            if (Code == "1")
                            {
                                <div class="alert alert-success msgdiv" id="divmsg">
                                    <strong>Success!</strong> @msg
                                </div>
                                <script type="text/javascript">
                                    window.setTimeout(function () {
                                        $('#divmsg').hide();
                                    }, 3000);
                                </script>
                            }
                            else
                            {
                                <div class="alert alert-danger msgdiv">
                                    <strong>Error!</strong> @msg
                                </div>
                            }
                        }
                    }
                </div>
            </div>


            <div class="row">
                <!-- column -->
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="table">
                                <div class="table-responsive">
                                    <table class="table table-striped dataTable">
                                        <thead>
                                            <tr role="row" class="bg-secondary">
                                                <th>S.No</th>
                                                <th>Pay Commission</th>
                                                <th>Grade Pay</th>
                                                <th>Pay Comission Level</th>
                                                <th>Increment</th>
                                                <th>Basic</th>
                                                <th>Edit</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.list != null)
                                            {
                                                var sn = 1;
                                                foreach (var item in Model.list)
                                                {
                                                    <tr role="row" class="odd">
                                                        <input type="hidden" value="@item.ID" class="ID" />
                                                        <td>@sn</td>
                                                        <td>@item.PayComissionName</td>
                                                        <td>@item.GradePay</td>
                                                        <td>@item.Level</td>
                                                        <td>@item.Increment</td>
                                                        <td>@item.Basic</td>
                                                        <td class="">
                                                            <a href="/Master/AddPayComission?ID=@item.ID" title="Edit"><i class="fa fa-pencil"></i> </a>
                                                        </td>
                                                    </tr>
                                                    sn++;
                                                }

                                            }

                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>



