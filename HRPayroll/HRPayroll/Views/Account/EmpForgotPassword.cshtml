@model HRPayroll.Models.EmpLogin

@{
    ViewBag.Title = "ForgotPassword";
    Layout = null;
}


<html lang="en">
<head>
    <meta charset="utf-8">
    <title>HRPay Roll</title>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Lucid HR & Project Admin Dashboard Template with Bootstrap 5x">
    <meta name="author" content="HRMS">

    <link rel="icon" href="favicon.ico" type="image/x-icon">

    <!-- MAIN CSS -->
    <link rel="stylesheet" href="~/assets/css/main.css">
</head>
<body>
    <div id="layout" class="theme-orange">
        <!-- WRAPPER -->
        <div id="wrapper">
            <div class="d-flex h100vh align-items-center auth-main w-100">
                <div class="auth-box">

                    <div class="top mb-4">
                        <div class="logo">
                            <h1 class="text-white">HR PAYROLL</h1>
                        </div>
                    </div>
                    <div class="card shadow p-lg-4">
                        <div class="row">
                            <div class="col-sm-12">
                                @{
                                    string Code = (string)TempData["code"];
                                    string msg = (string)TempData["Msg"];
                                    if (!string.IsNullOrEmpty(Code))
                                    {
                                        if (Code == "1")
                                        {
                                            <div class="alert alert-success msgdiv" id="msgdiv">
                                                <strong>Success!</strong> @msg
                                            </div>
                                            <script type="text/javascript">
                                                window.setTimeout(function () {
                                                    location.href = '/Account/ForgotPassword';
                                                   // $('#msgdiv').hide();
                                                }, 5000);
                                            </script>
                                        }
                                        else
                                        {
                                            <div class="alert alert-danger msgdiv">
                                                <strong>Error!</strong> @msg
                                            </div>
                                        }
                                    }
                                }
                            </div>
                        </div>

                        <div class="card-header pb-0">
                            <h3 class="fs-5 mb-0 text-center mb-2">Forgot Password?</h3>
                            <p class="text-center" style="font-size: 16px;">You will get your password on registered email from here.</p>
                        </div>
                        <div class="card-body">
                            <form class="form-horizontal form-material" action="/Account/EmpForgotPassword" method="post">

                                <div class="col-xs-12">
                                    <div class="form-group mb-3">
                                        @Html.TextBoxFor(M => M.EmailId, new { @class = "form-control", @placeholder = "Enter EmailId..", @type = "email" })
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <button type="submit" class="btn btn-primary col-md-12">Reset Password</button>
                                    </div>
                                    <div class="col-md-6">
                                        <button class="btn btn-success col-md-12"> <a href="/Account/login" style="color:white;">Back To Login</a></button>
                                        @*<button type="button" href="/Account/login" class="btn btn-success col-md-12"> Back To Login</button>*@
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END WRAPPER -->
    </div>
</body>


</html>