@model HRPayroll.Models.AccountType
@{
    ViewBag.Title = "AccountType";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
    <div class="card-body p-4">
        <h3 class="mb-4 pb-md-0">Account Type</h3>
        @using (Html.BeginForm("AccountType", "Account", FormMethod.Post))
        {
            @Html.Partial("_ResponseMessage")
            @Html.HiddenFor(x=>x.AC_Type_Id)
            <div class="row">
                <div class="col-md-6">

                    <div class="form-outline">
                        <label class="form-label" for="firstName">Account Name</label>
                        @Html.TextBoxFor(x => x.AC_Name, new { @class = "form-control form-control-md", @maxlength = "20" })
                    </div>

                </div>
                <div class="col-md-6">

                    <div class="form-outline">
                        <label class="form-label">Comment</label>
                        @Html.TextBoxFor(x => x.Comments, new { @class = "form-control form-control-md", @maxlength = "20" })
                    </div>

                </div>
            </div>
            <div class="mt-4 pt-2">
                <input class="btn btn-primary btn-lg" type="submit" value="Submit" />
            </div>
        }
    </div>
</div>


