@model HRPayroll.Models.AccountGroup
@{
    ViewBag.Title = "AccountGroup";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
    <div class="card-body p-4">
        <h3 class="mb-4 pb-2">Account Group</h3>
        @using (Html.BeginForm("AccountGroup", "Account", FormMethod.Post))
        {
            @Html.Partial("_ResponseMessage")
            @Html.HiddenFor(x => x.Group_Id)
            <div class="row">
                <div class="col-md-6">
                    <div class="form-outline">
                        <label class="form-label">Account Group Name</label>
                        @Html.TextBoxFor(x => x.Account_Group_Name, new { @class = "form-control form-control-md", @maxlength = "20" })
                    </div>
                </div>
                <div class="col-md-6 mt-2">
                    <div class="form-outline">
                        <label class="form-label">Account Perent Group Id</label>
                        @Html.DropDownListFor(m => m.Account_Perent_Group_Id, new SelectList(ViewBag.AccountGroups, "Value", "Text"), "-- Select --", new { @class = "form-control form-control-md" })
                    </div>
                </div>
                <div class="col-md-6 mt-2">
                    <div class="form-outline">
                        <label class="form-label">Account Type</label>
                        @Html.DropDownListFor(m => m.Ac_Type_Id, new SelectList(ViewBag.AccountType, "Value", "Text"), "-- Select --", new { @class = "form-control form-control-md" })
                    </div>
                </div>
                <div class="col-md-6 mt-2">
                    <div class="form-outline">
                        <label class="form-label">Remark</label>
                        @Html.TextAreaFor(x => x.Nature, new { @class = "form-control form-control-md", @maxlength = "100" })
                    </div>
                </div>
                <div class="col-md-6 mt-2">
                    <div class="form-outline">
                        <label class="form-label">Description</label>
                        @Html.TextAreaFor(x => x.Remarks, new { @class = "form-control form-control-md", @maxlength = "100" })
                    </div>
                </div>
                <div class="col-md-6 mt-2">
                    @if (Model.IsActive == 1)
                    {
                        <div class="form-group form-check">
                            <label class="form-check-label" for="chk">IsActive</label>
                            <input type="checkbox" class="form-check-input " id="chk" checked>
                            @Html.HiddenFor(x => x.IsActive)
                        </div>
                    }
                    else
                    {
                        <div class="form-group form-check">
                            <label class="form-check-label" for="chk">IsActive</label>
                            <input type="checkbox" class="form-check-input " id="chk">
                            @Html.HiddenFor(x => x.IsActive)
                        </div>
                    }

                </div>
                <div class="col-md-6 mt-2">
                    @if (Model.Is_Primary_Group == 1)
                    {
                        <div class="form-group form-check">
                            <label class="form-check-label" for="isPrimary">Is Primary Group</label>
                            <input type="checkbox" class="form-check-input " id="isPrimary" checked>
                            @Html.HiddenFor(x => x.Is_Primary_Group)
                        </div>
                    }
                    else
                    {
                        <div class="form-group form-check">
                            <label class="form-check-label" for="isPrimary">Is Primary Group</label>
                            <input type="checkbox" class="form-check-input " id="isPrimary">
                            @Html.HiddenFor(x => x.Is_Primary_Group)
                        </div>
                    }
                </div>
            </div>
            <div class="mt-4 pt-2">
                <input class="btn btn-primary btn-lg" type="submit" value="Submit" />
            </div>
        }
    </div>
</div>

<script>

    $('#chk').on("change", function () {

        if ($("#chk").prop('checked') == true) {
            $('#IsActive').val(1);
        }
        else {
            $('#IsActive').val(0);
        }

    })

    $('#isPrimary').on("change", function () {

        if ($("#isPrimary").prop('checked') == true) {
            $('#Is_Primary_Group').val(1);
        }
        else {
            $('#Is_Primary_Group').val(0);
        }

    })

    $(".only-numeric").bind("keypress", function (e) {
        var keyCode = e.which ? e.which : e.keyCode
        if (!(keyCode >= 48 && keyCode <= 57)) {
            //swal("", "Please enter numeric digit only", "warning");
            return false;
        }
        return true;
    });

</script>