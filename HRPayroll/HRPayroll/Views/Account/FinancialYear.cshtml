@model HRPayroll.Models.FinancialYear
@{
    ViewBag.Title = "FinancialYear";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
    <div class="card-body p-4">
        <h3 class="mb-4 pb-2">Account Type</h3>
        @using (Html.BeginForm("FinancialYear", "Account", FormMethod.Post))
        {
            @Html.Partial("_ResponseMessage")
            @Html.HiddenFor(x=>x.Id)
            <div class="row">
                <div class="col-md-6">
                    <div class="form-outline">
                        <label class="form-label" for="firstName">Full Name</label>
                        @Html.TextBoxFor(x => x.Fy_Full, new { @class = "form-control form-control-md" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-outline">
                        <label class="form-label">Short Name</label>
                        @Html.TextBoxFor(x => x.Fy_Short, new { @class = "form-control form-control-md" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-outline">
                        <label class="form-label">Start From</label>
                        @Html.TextBoxFor(x => x.Start_From, new { @class = "form-control form-control-md datepicker", @readonly = "readonly" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-outline">
                        <label class="form-label">End On</label>
                        @Html.TextBoxFor(x => x.End_On, new { @class = "form-control form-control-md datepicker", @readonly = "readonly" })
                    </div>
                </div>
            </div>
            <div class="mt-4 pt-2">
                <input class="btn btn-primary btn-lg" type="submit" value="Submit" />
            </div>
        }
    </div>
</div>

