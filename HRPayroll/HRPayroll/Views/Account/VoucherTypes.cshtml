@model HRPayroll.Models.VoucherTypes
@{
    ViewBag.Title = "VoucherTypes";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
    <div class="card-body p-4">
        <h3 class="mb-4 pb-2">Account Type</h3>
        @using (Html.BeginForm("VoucherTypes", "Account", FormMethod.Post))
        {
            @Html.Partial("_ResponseMessage")
            @Html.HiddenFor(x=>x.Voucher_Type_Id)
            <div class="row">
                <div class="col-md-6">
                    <div class="form-outline">
                        <label class="form-label" for="firstName">Voucher Title</label>
                        @Html.TextBoxFor(x => x.Voucher_Title, new { @class = "form-control form-control-md", @maxlength = "20" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-outline">
                        <label class="form-label">Start Number</label>
                        @Html.TextBoxFor(x => x.Start_Number, new { @class = "form-control form-control-md only-numeric" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-outline">
                        <label class="form-label">Prefix</label>
                        @Html.TextBoxFor(x => x.Prefix, new { @class = "form-control form-control-md" })
                    </div>

                </div>
                <div class="col-md-6">
                    <div class="form-outline">
                        <label class="form-label">Financial Year</label>
                        @Html.DropDownListFor(m => m.FY_Id, new SelectList(ViewBag.FnYear, "Value", "Text"), "-- Select --", new { @class = "form-control form-control-md" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-outline">
                        <label class="form-label">Nature</label>
                        @Html.TextBoxFor(x => x.Nature, new { @class = "form-control form-control-md", @maxlength = "20" })
                    </div>

                </div>
            </div>
            <div class="mt-4 pt-2">
                <input class="btn btn-primary btn-lg" type="submit" value="Submit" />
            </div>
        }
    </div>
</div>

<script>

    $(".only-numeric").bind("keypress", function (e) {
        var keyCode = e.which ? e.which : e.keyCode
        if (!(keyCode >= 48 && keyCode <= 57)) {
            //swal("", "Please enter numeric digit only", "warning");
            return false;
        }
        return true;
    });

</script>
