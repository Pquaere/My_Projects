@model HRPayroll.Models.FormType
@{
    ViewBag.Title = "AddFormType";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="row page-titles">
        <div class="col-md-12 align-self-center">
            <h3 class="text-themecolor font-20 clearfix">Add FormType</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @{
                string Code = (string)TempData["code"];
                string msg = (string)TempData["Msg"];
                if (!string.IsNullOrEmpty(Code))
                {
                    if (Code == "1")
                    {
                        <div class="alert alert-success msgdiv">
                            <strong>Success!</strong> @msg
                        </div>
                        <script type="text/javascript">
                            window.setTimeout(function () {
                                location.href = '/UserPermission/FormTypeList';
                            }, 4000);
                        </script>
                    }
                    else
                    {
                        <div class="alert alert-danger msgdiv">
                            <strong>Error!</strong> @msg
                        </div>
                    }
                }
            }
        </div>
    </div>



    <div class="row">
        <div class="col-lg-12">
            <div class="card card-outline-info">
                <div class="card-body">
                    <form action="/UserPermission/AddFormType" method="post" onsubmit="return validateForm()">
                        <div class="form-body">

                            <div class="row p-t-20">
                                <!--/span-->
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="control-label">
                                            Enter FormType Name<span class="text-danger">*</span>
                                        </label>
                                        @Html.TextBoxFor(M => M.FormTypeName, new { @class = "form-control", @placeholder = "Enter FormType Name", @maxlength = "50" })
                                        @Html.ValidationMessageFor(m => m.FormTypeName, "", new { @class = "text-danger" })
                                        @Html.HiddenFor(m => m.ID)

                                    </div>
                                </div>


                            </div>
                        </div>
                        <div class="form-actions">
                            @if (Model.ID > 0)
                            {
                                <button class="btn btn-success hstheme-button-o text-white">
                                    <i class="fa fa-check"></i>
                                    Update
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-success hstheme-button-o text-white">
                                    <i class="fa fa-check"></i>
                                    Submit
                                </button>
                            }

                            <a href="/UserPermission/FormTypeList" class="btn btn-danger hstheme-button-o text-white">
                                <i class="fa fa-crosshairs"></i>
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    function validateForm() {
        if ($('#FormTypeName').val() == '' || $('#FormTypeName').val() == '0') {
            swal("", "Please Enter FormType Name..", "warning");
            $('#FormTypeName').focus();
            return false;

        }
    }
</script>

