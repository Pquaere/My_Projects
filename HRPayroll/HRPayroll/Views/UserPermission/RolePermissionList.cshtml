@model List<HRPayroll.Models.RolePermissionModel>
@using HRPayroll.Models.Manager;
@{
    ViewBag.Title = "RolePermissionList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-wrapper">
    @{
        string msg = (string)TempData["msg"];
        string code = (string)TempData["code"];
        if (msg != null)
        {
            if (code.Equals("1"))
            {
                <div class="alert alert-success m-t-30" id="divsuccess">
                    <i class="mdi mdi-checkbox-multiple-marked-outline"></i> <strong>Success!</strong> @msg
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">×</span> </button>
                </div>
            }
            else
            {
                <div class="alert alert-success m-t-30" id="divUpdate">
                    <i class="mdi mdi-checkbox-multiple-marked-outline"></i>  <strong>Error!</strong> @msg
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">×</span> </button>
                </div>
            }
        }
    }    
    <div class="row page-titles">
        <div class="col-md-6 align-self-center">
            <h3 class="text-themecolor font-20 clearfix">Role Permssion List</h3>
            <nav aria-label="breadcrumb" class="float-left">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#-">Admin</a></li>
                    <li class="breadcrumb-item"><a href="#-">User Permission</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Role Permssion List</li>
                </ol>
            </nav>
        </div>
        <div class="pbutton" style="width:50%">
            <div class="right text-right">
                @*@if (PermissionManager.IsActionPermit("Role Permission", ViewOptions.FormSave))
        {*@
                <a href="/UserPermission/RolePermission" id="btnAdd" class="btn btn-success">
                    <i class="fa fa-plus" aria-hidden="true"></i> Add Role Permission
                </a>
                @*}*@

            </div>
        </div>
    </div>
    <div id="no-more-tables">
        <div class="row">
            <div class="col-lg-12">

                <div class="box">
                    <div class="box-body">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-9">
                                        @*<h4 class="header-title mt-0 mb-1">Product List</h4>*@
                                    </div>
                                </div>

                                <div class="table-responsive" id="DivProductList">
                                    <table id="myTable" class="table table-hover table-striped mb-0 datatable">
                                        <thead class="table-primary">
                                            <tr class="hdr">
                                                <th align="left" scope="col">S. No.</th>
                                                <th align="left" scope="col">Role Name</th>
                                                <th align="left" scope="col">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null)
                                            {
                                                int SNO = 0;
                                                foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>@(SNO = SNO + 1)</td>
                                                        <td>@item.Roll_name</td>
                                                        <td>
                                                            @*@if (PermissionManager.IsActionPermit("Role Permission", ViewOptions.FormUpdate))
                                                                {*@
                                                            <a href="/UserPermission/RolePermissionFill?roleId=@item.FK_RoleId" title="Edit" onclick="return confirm ('Are you sure to edit?');" class="btn btn-primary btn-sm"><i class="fa fa-edit"></i></a>
                                                            @*}
                                                                @if (PermissionManager.IsActionPermit("Role Permission", ViewOptions.FormDelete))
                                                                {*@
                                                            <a href="/UserPermission/SetPermissionDelete/@item.FK_RoleId" title="Delete" onclick="return confirm ('Are you sure to delete?');" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></a>
                                                            @*}*@
                                                        </td>

                                                    </tr>
                                                }
                                            }

                                        </tbody>
                                    </table>
                                </div><!-- /.box-body -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

