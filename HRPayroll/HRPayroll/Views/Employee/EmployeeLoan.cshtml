    function ValidateForm() {
        debugger;
        if ($('#LoneType').val() == '' || $('#LoneType').val() == '0' || $('#LoneType').val() == null) {
            swal("", "Please Select Loan Type...", "warning");
            $('#LoneType').focus();
            return false;
        }
        if ($('#MonthlyDeduction').val() == '' || $('#MonthlyDeduction').val() == '0' || $('#MonthlyDeduction').val() == null) {
            swal("", "Please Enter Monthly Deduction...", "warning");
            $('#MonthlyDeduction').focus();
            return false;
        }
        if ($('#AdvanceAmount').val() == '' || $('#AdvanceAmount').val() == '0' || $('#AdvanceAmount').val() == null) {
