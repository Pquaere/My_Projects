            swal("", "Please Enter Current Installment...", "warning");
            $('#CurrentNoOfInstalment').focus();
            return false;
        }
        if ($('#Status').val() == '' || $('#Status').val() == '0' || $('#Status').val() == null) {
            swal("", "Please Enter Status...", "warning");
            $('#Status').focus();
            return false;
        }
        else {
            return true;
            $("#form").submit();
        }
