@model HRPayroll.Models.PaySlip
@{
    ViewBag.Title = "ContPaySlip";
    Layout = null;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>PAY SLIP</title>
</head>
<style type="text/css">
    p {
        padding: 0px;
        margin: 0px;
        margin-bottom: 10px !important;
    }
</style>
<body style="margin: 10px 0; font-size: 12px;font-family:Arial, Verdana, Tahoma; line-height: 16px;">
    <div style="text-align: center;margin-bottom: 5px;"><button type="button" style="background-color:blue; color:white; padding:5px 10px; font-size: 16px;" class="printMe btn btn-danger">Print</button></div>
    <table class="table table-responsive table-bordered"  border="1" cellpadding="0" cellspacing="0" style="width: 800px; margin: 0 auto; background-color: white; border-color: Black; font-family: Arial, Helvetica, sans-serif; font-size: 8px; page-break-inside: avoid;" id="outprint">
        <tr style="background-color: White; color: Black; border: 0px;">
            <td colspan="12" align="center">
                <table width="100%" style="font-family: Arial, Helvetica, sans-serif; background-color: #e48029; color: Black; font-size: 8px;">
                    <tr>
                        <td align="center" rowspan="3">
                            <img src="../images/UPSRTC.png" width="90px" height="40" alt="#" />
                        </td>
                        <td align="center" style="font-family: Arial, Helvetica, sans-serif; font-size: 12px;"><b>Pay Slip for Contractual Employee</b></td>
                        <td align="center" rowspan="3">
                            <img src="../images/UPSRTC.png" width="90px" height="40" alt="#" />
                        </td>
                    </tr>
                    <tr>
                        <td align="center" style="font-family: Arial, Helvetica, sans-serif; font-size: 10px;"><b>URBAN LOCAL BODY DIRECTORATE</b></td>
                    </tr>
                    <tr>
                        <td align="center" style="font-family: Arial, Helvetica, sans-serif; font-size: 10px;"><b>   </b></td>
                    </tr>
                    <tr>
                        <td align="left"><b>Emp. Code:@Model.EmpCode  </b></td>
                        <td></td>
                        <td align="right"><b>Month:@Model.Month  @Model.Year  </b></td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr style="font-weight: bold; border: 0; border-color: Black; padding-left: 0px; background-color: #e4e2e2; color: Black;">
            <td align="left" colspan="3"><b>Name:@Model.EmpName  </b></td>
            <td align="left" colspan="3"><b>Designation:@Model.Designation  </b></td>


            <td align="left" colspan="3"><b>Present:@Model.DutyDays   </b></td>



            <td align="right" rowspan="3" colspan="2">
                <center>
                     
                    

                </center>
            </td>
        </tr>
        <tr style="font-weight: bold; border: 1; border-color: Black; padding: 0px; background-color: #e4e2e2; color: Black;">
            <td align="left" colspan="3"><b>Father's/Husband's Name:@Model.FatherName  </b></td>
            <td align="left" colspan="3"><b>DOB.:@Model.DOB  &nbsp;&nbsp;&nbsp;&nbsp;DOJ.:@Model.DOJ  </b></td>
            <td align="left" colspan="3"><b>Contract Expiery Date:@Model.DOR  </b></td>
        </tr>
        <tr style="font-weight: bold; border: 1; border-color: Black; padding: 0px; background-color: #e4e2e2; color: Black;">
            <td align="left" colspan="3"><b>Bank:@Model.BankName  </b></td>
            <td align="left" colspan="3"><b>A/C No.:@Model.AccountNo  </b></td>
            <td align="left" colspan="3"><b>IFSC:@Model.RTGSCode  </b></td>
        </tr>
        <tr style="font-weight: bold; border: 1; border-color: Black; padding: 0px; background-color: #e4e2e2; color: Black;">
            <td align="left" colspan="3"><b>Department:@Model.DepartmentHead   </b></td>
            <td align="left" colspan="3"><b>Sub Department:@Model.SubDeptName </b></td>
            <td align="left" colspan="3"><b>Aadhar No.:@Model.AdharNo </b></td>
            <td align="left" colspan="3"><b>PAN No.:@Model.PANNo  </b></td>
        </tr>

        <tr style="font-weight: bold; border: 1; border-color: Black; padding: 0px; background-color: #e4e2e2; color: Black;">
            <td align="center" colspan="4">&nbsp;</td>
            <td align="center" colspan="4"><b><u>EARNING</u></b></td>
            <td align="center" colspan="4"><b><u>DEDUCTION</u></b></td>
        </tr>

        <tr style="background-color: White; font-weight: bold; color: Black;">
            <td align="left" valign="top" colspan="4" style="width: 140px;">
                <table width="95%" style="font-family: Arial, Helvetica, sans-serif; font-size: 8px;">
                    <tr>
                        <td align="left"><b>Basic Salary:</b></td>
                        <td align="right">@Model.BasicSalary </td>
                    </tr>
        </tr>

        <tr>
            <td align="left"><b>D.A.(@Model.DAPer  ):</b></td>
            <td align="right"> @Model.DAAmount</td>
        </tr>

    </table>
    </td>
    <td align="left" valign="top" colspan="4" style="width: 160px;">
        <table width="95%" style="font-family: Arial, Helvetica, sans-serif; font-size: 8px;">
            <tr>
                <td align="left" colspan="2"><b>EPF Employer:</b></td>
                <td align="right" colspan="2">@Model.EPFEmployer </td>
            </tr>
            <tr>
                <td align="left" colspan="2"><b>ESIC Employer:</b></td>
                <td align="right" colspan="2">@Model.ESICEmployer </td>
            </tr>
            <tr>
                <td align="left" colspan="2"><b>Other Allowance:</b></td>
                <td align="right" colspan="2">@Model.EOther</td>
            </tr>
            <tr>
                <td align="left" colspan="2"><b>MIsc Allowance:</b></td>
                <td align="right" colspan="2">@Model.Misc </td>
            </tr>
            <tr>
                <td align="left" colspan="2"><b>PPF Contribution:</b></td>
                <td align="right" colspan="2">@Model.PPFCont </td>
            </tr>
            <tr>
                <td align="left" colspan="2"><b>Festival:</b></td>
                <td align="right" colspan="2"> @Model.Festival</td>
            </tr>
        </table>
    </td>
    <td align="left" valign="top" colspan="4" style="width: 160px;">
        <table width="95%" style="font-family: Arial, Helvetica, sans-serif; font-size: 8px;">

            <tr>
                <td align="left"><b>LIC.</b></td>
                <td align="right">@Model.LIC </td>
            </tr>
            <tr>
                <td align="left"><b>Income Tax:</b></td>
                <td align="right">@Model.Penality </td>
            </tr>

            <tr>
                <td align="left"><b>Misc Deduction:</b></td>
                <td align="right">@Model.DMisc </td>
            </tr>
            <tr>
                <td align="left"><b>ESIC Employee:</b></td>
                <td align="right"> @Model.ESICEmployee</td>
            </tr>
            <tr>
                <td align="left"><b>EPF Employee:</b></td>
                <td align="right"> @Model.EPFEmployee</td>
            </tr>
            <tr>
                <td align="left"><b>PPF Deduction:</b></td>
                <td align="right"> @Model.DPPF</td>
            </tr>
        </table>
    </td>




    </tr>
    <tr style="font-weight: bold; border: 1; border-color: Black; padding: 0px; background-color: #e4e2e2 color: Black;">
        <td align="left" colspan="4"><b>Total Earning:@Model.GrossPay  </b></td>

        <td align="center" colspan="4"><b>Total Deduction:@(Model.GrossPay - Model.NetPay)  </b></td>



        <td align="right" colspan="4"><b>Net Payable:@Model.NetPay  </b></td>

    </tr>
    </table>
</body>
</html>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/PDF/dist/jspdf.debug.js"></script>
<script src="~/Scripts/PDF/dist/jspdf.js"></script>
<script src="~/Scripts/PDF/dist/jspdf.min.js"></script>
<script type="text/javascript">


    $(".printMe").click(function () {
        var divToPrint = document.getElementById("outprint");
        newWin = window.open("");
        newWin.document.write(divToPrint.outerHTML);
        newWin.print();
        newWin.close();
    });
</script>


