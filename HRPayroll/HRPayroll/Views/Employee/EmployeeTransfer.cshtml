                                                            @Html.TextBoxFor(M => M.MobileNo, new { @class = "form-control", @disabled = "disabled" })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label class="form-label">Date of Joining</label>
                                                            @Html.TextBoxFor(M => M.DOJ, new { @class = "form-control", @disabled = "disabled" })
                                                        </div>
                                                    </div>
